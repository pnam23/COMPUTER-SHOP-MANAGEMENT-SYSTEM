<UserControl x:Class="computershop.CustomControl.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:computershop.CustomControl"
             mc:Ignorable="d" 
             d:DesignHeight="28" d:DesignWidth="800">

    <PasswordBox x:Name="txtPassWord"
                 FontSize="13"
                 FontFamily="Montserrat"
                 Foreground="White"
                 CaretBrush="LightGray"
                 BorderBrush="DarkGray"
                 BorderThickness="0,0,0,1"    
                 VerticalContentAlignment="Center"
                 Padding="30,0,0,0">
        <PasswordBox.Background>
                <ImageBrush ImageSource="/computershop;component/Images/key.png"
                    Stretch="Uniform"
                    AlignmentX="Left"/>
            </PasswordBox.Background>
        </PasswordBox>
   
</UserControl>
